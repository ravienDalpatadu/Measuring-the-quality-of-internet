<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Speed Internet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container">

        <h1>Internet Speed</h1>
        <button class="btn-danger" id="check">Check Speed</button>
        <div id="upSpeed">
            <p></p>
        </div>
        <div id="downSpeed">
            <p></p>
        </div>
    </div>
</body>
</html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        $('#check').on('click', function () {
            console.log('clicked');


            $.ajax({
                method:"GET",
                url:"/checkspeed",
                success: function(data){
                    console.log(data)
                    var upload = data.upspeed
                    var download = data.downspeed
                    $("#upSpeed > p").text("upload speed: " + upload + " mbps")
                    $("#downSpeed > p").text("download speed: " + download + " mbps") 

                }

            })
        })
    });
</script>